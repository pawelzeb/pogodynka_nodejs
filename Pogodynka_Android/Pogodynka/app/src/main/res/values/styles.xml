<resources>
<!--Splash screen-->


        <!-- Styl dla progress bar -->
    <style name="MyProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/colorBackground</item>
        <item name="android:indeterminateTintMode">src_in</item>
    </style>

    <!-- Styl dla menu w dole -->
    <style name="BottomNavigationViewStyle.Light" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemBackground">@color/colorBackground</item>
        <item name="itemIconTint">@drawable/selector_nav</item>
        <item name="itemTextColor">@drawable/selector_nav</item>
    </style>

    <!-- Styl dla BottomNavigationView w ciemnym trybie -->
    <style name="BottomNavigationViewStyle.Dark" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemBackground">@color/colorBackground</item>
        <item name="itemIconTint">@drawable/selector_nav</item>
        <item name="itemTextColor">@drawable/selector_nav</item>
    </style>

    <!-- Jasny temat -->


    <!-- Styl dla RecyclerView w jasnym trybie -->
    <style name="RecyclerViewStyle.Light" parent="Widget.AppCompat.ListView">
        <item name="android:background">@color/black75</item>
    </style>
    <!-- Styl dla BottomNavigationView w ciemnym trybie -->
    <style name="FAPBottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemBackground">@color/nav_bar_bg</item>
        <item name="itemIconTint">@drawable/selector_nav</item>
        <item name="itemTextColor">@drawable/selector_nav</item>
    </style>

    <!-- Styl dla RecyclerView w ciemnym trybie -->
    <style name="RecyclerViewStyle.Dark" parent="Widget.AppCompat.ListView">
        <item name="android:background">@color/nav_bar_bg</item>
    </style>


    <!-- Ciemny temat -->
    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black75</item>
        <item name="android:textColor">@color/black</item>
         <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="TransparentBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/transparent</item>

    </style>

</resources>
