<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/history_list_fragment">

    <fragment
        android:id="@+id/history_list_fragment"
        android:name="com.projekt.pogodynka.activities.HistoryListFragment"
        android:label="HistoryListFragment">
        <action
            android:id="@+id/show_history_detail"
            app:destination="@id/history_detail_fragment" />
    </fragment>
    <fragment
        android:id="@+id/history_detail_fragment"
        android:name="com.projekt.pogodynka.activities.HistoryDetailFragment"
        android:label="history_detail"
        tools:layout="@layout/fragment_history_detail">
        <argument
            android:name="item_id"
            android:defaultValue=""
            app:argType="string" />
    </fragment>
</navigation>